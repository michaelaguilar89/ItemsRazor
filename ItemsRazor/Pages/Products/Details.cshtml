@page
@model ItemsRazor.Pages.Products.DetailsModel
@{
}


<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            @if (Model.product!=null)
            {
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">@Model.Title</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><strong>Name :</strong> @Model.product.Name</p>
                        <p class="card-text"><strong>Description :</strong> @Model.product.Description</p>
                        <p class="card-text"><strong>Price :</strong> @Model.product.Price</p>


                    </div>
                    <div class="card-footer">
                        <div>
                           <div class="row text-center
">
                               <div class="col-lg-12">
                                    <div class="col-lg-6">
                                        <a asp-page="/Products/Index" class="btn btn-secondary">Go Back</a>

                                    </div>
                                    <div class="col-lg-6">
                                        @if (@Model.Title == "Confirm remove Item?")
                                        {
                                            <form method="post">
                                                <button type="submit" class="btn btn-danger">Yes</button>
                                            </form>

                                        }
                                    </div>
                               </div>
                           </div>
                           
                        </div>


                    </div>

                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <a asp-page="/Products/Index"  class="btn btn-secondary">Go Back</a>
                    </div>
                </div>
            }
          
        </div>

        <h3 class="text-danger text-center ">@Model.ErrorMessage</h3>
        
    </div>
</div>